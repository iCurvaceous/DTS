<h1>TEST CASE</h1>
<h3>Get Data</h3>
<a href="/get-data">LOAD DATA</a>
<div>
    {{# each items }}
    <article class="item">
        <div>Title: {{ this.title }}</div>
        <div>Content: {{ this.content }}</div>
        <div>Author: {{ this.author }}</div>
        <div>ID: {{ this._id }}</div>
    </article>
    {{/each}}
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#insertDataModel">
    Create TestCase
</button>
<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#updateDataModel">
    Update TestCase
</button>
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteDataModel">
    Delete TestCase
</button>

<!--Delete Modal -->
<div class="modal fade" id="deleteDataModel" tabindex="-1" role="dialog" aria-labelledby="deleteDataModelTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteDataModelTitle">Delete Test Case</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Content Here -->
                <form action="/delete" method="post">
                    <div class="input">
                        <label for="id">ID</label>
                        <input type="text" class="form-control" id="id" name="id">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!--Update Modal -->
<div class="modal fade" id="updateDataModel" tabindex="-1" role="dialog" aria-labelledby="updateDataModelTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateDataModelTitle">Update Test Case</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Content Here -->
                <form action="/update" method="post">
                    <div class="input">
                        <label for="id">ID</label>
                        <input type="text" class="form-control" id="id" name="id">
                    </div>
                    <div class="input">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <div class="input">
                        <label for="content">Content</label>
                        <input type="text" class="form-control" id="content" name="content">
                    </div>
                    <div class="input">
                        <label for="author">Author</label>
                        <input type="text" class="form-control" id="author" name="author">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



<!-- Insert Modal -->
<div class="modal fade" id="insertDataModel" tabindex="-1" role="dialog" aria-labelledby="insertDataModelTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="insertDataModelTitle">Insert Test Case</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/insert" method="post"></form>
            <div class="modal-body">
                <!-- Content Here -->

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <input type="text" class="form-control" id="content" name="content">
                </div>
                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" id="author" name="author">
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Insert</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
            </form>
        </div>
    </div>
</div>